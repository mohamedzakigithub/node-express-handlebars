<div class="container-fluid">
      <div class="row">
        <img
          src="/assets/img/burger.png"
          class="img-fluid mx-auto"
          alt="Responsive image"
          style="width: 100px;"
        />
      </div>
      <h1 class="display-2 text-center">Eat-Da-Burger!</h1>
      <button class="reset btn btn-danger btn-lg ">Reset</button>
      <div class="row">
        <div class="col">
          <h3 class="text-center">To Devour</h3>
          <ul class="list-group">
            {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block devoured=false
                }}
              {{/unless}}
            {{/each}}
          </ul>
        </div>
        <div class="col">
          <h3 class=" text-center">Devoured</h3>
          <ul class="list-group">
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col d-flex justify-content-center">
          <form class="create-form">
            <div class="form-group">
              <input
                type="text"
                id="burger"
                name="name"
                placeholder="Enter a burger name"
              />
            </div>
            <button type="submit" class="btn btn-primary">Add Burger</button>
          </form>
        </div>
      </div>
    </div>